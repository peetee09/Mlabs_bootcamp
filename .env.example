# MongoDB Connection String
# Replace with your MongoDB Atlas connection string or local MongoDB URL
# For MongoDB Atlas, use the format below (replace placeholders with your actual values):
# MONGODB_URI=mongodb+srv://<username>:<password>@<cluster-name>.mongodb.net/<database>?retryWrites=true&w=majority
MONGODB_URI=mongodb://localhost:27017/inventory_db

# Server Port (optional, defaults to 3000)
PORT=3000

# VAPID Keys for Web Push Notifications
# Generate your own keys using: npx web-push generate-vapid-keys
VAPID_PUBLIC_KEY=your_vapid_public_key_here
VAPID_PRIVATE_KEY=your_vapid_private_key_here
